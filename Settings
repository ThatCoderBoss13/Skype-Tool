        Tools.Label5.ForeColor = Color.LightBlue
        Tools.Label6.ForeColor = Color.LightBlue
        Tools.Button3.BackColor = Color.LightBlue
        Tools.Button4.BackColor = Color.LightBlue


    End Sub

    Private Sub RadioButton3_CheckedChanged(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles RadioButton3.CheckedChanged
